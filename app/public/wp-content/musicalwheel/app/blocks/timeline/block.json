{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "musicalwheel/timeline",
	"version": "0.1.0",
	"title": "Timeline",
	"category": "musicalwheel-social",
	"icon": "rss",
	"description": "Display social activity timeline with posts, comments, and interactions",
	"keywords": ["timeline", "social", "feed", "activity"],
	"textdomain": "musicalwheel-fse",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./editor.css",
	"style": "file:./style.css",
	"render": "file:./render.php",
	"attributes": {
		"postTypes": {
			"type": "array",
			"default": ["post"]
		},
		"limit": {
			"type": "number",
			"default": 10
		},
		"showAvatars": {
			"type": "boolean",
			"default": true
		},
		"showTimestamp": {
			"type": "boolean",
			"default": true
		},
		"enableInfiniteScroll": {
			"type": "boolean",
			"default": false
		}
	},
	"supports": {
		"html": false,
		"align": ["wide", "full"],
		"spacing": {
			"margin": true,
			"padding": true
		},
		"color": {
			"background": true,
			"text": true,
			"link": true
		}
	},
	"example": {
		"attributes": {
			"limit": 5,
			"showAvatars": true
		}
	}
}
